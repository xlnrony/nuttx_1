	string "Mapped path of sdcard "
	default "/mnt/sd"
	---help---
		Mapped path of sdcard to be used. Default: "/mnt/sd"
		
config ADC1_DEVNAME
	string "SHOCK RESISTOR SENSOR ADC Device Name"
	default "/dev/adc1"
	---help---
		Name of adc device to be used. Default: "/dev/adc0"		

config ADC2_DEVNAME
	string "PHOTO RESISTOR SENSOR ADC Device Name"
	default "/dev/adc2"
	---help---
		Name of adc device to be used. Default: "/dev/adc1"		

config ADC3_DEVNAME
	string "INFRA-RED SENSOR ADC Device Name"
	default "/dev/adc3"
	---help---
		Name of adc device to be used. Default: "/dev/adc2"		
		
config LED1_DEVNAME
	string "LED1 Device Name"
	default "/dev/led1"
	---help---
		Name of led device to be used. Default: "/dev/led1"		

config LED2_DEVNAME
	string "LED2 Device Name"
	default "/dev/led2"
	---help---
		Name of led device to be used. Default: "/dev/led2"		

config LED3_DEVNAME
	string "LED3 Device Name"
	default "/dev/led3"
	---help---
		Name of led device to be used. Default: "/dev/led3"		

config IP_CONFLICT_DEVNAME
	string "IP conflict check Device Name"
	default "/dev/ipconflict"
	---help---
		Name of IP conflict check device to be used. Default: "/dev/ipconflict"		

