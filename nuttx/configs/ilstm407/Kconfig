if ARCH_BOARD_ILOCK_STM32F407

config EPASS3003_DEVNAME
	string "Epass3003 Device Name"
	default "/dev/epass3003a"
	---help---
		Name of epass3003 device to be used. Default: "/dev/epass3003a"
		
config TIM_DEVNAME
	string "MAGNET LX TIM3IN1 Device Name"
	default "/dev/tim0"
	---help---
		Name of tim device to be used. Default: "/dev/tim0"		

config ADC0_DEVNAME
	string "SHOCK RESISTOR SENSOR ADC Device Name"
	default "/dev/adc0"
	---help---
		Name of adc device to be used. Default: "/dev/adc0"		

config ADC1_DEVNAME
	string "PHOTO RESISTOR SENSOR ADC Device Name"
	default "/dev/adc1"
	---help---
		Name of adc device to be used. Default: "/dev/adc1"		

config ADC2_DEVNAME
	string "INFRA-RED SENSOR ADC Device Name"
	default "/dev/adc2"
	---help---
		Name of adc device to be used. Default: "/dev/adc2"		
		
endif
